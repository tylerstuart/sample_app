<%= provide(:title, 'New Recipe') %>
<h1>New Recipe</h1>

<div class="row">
  <div class="span6 offset3">
  	<%= form_for(@recipe) do |f| %>
  	  <%= render 'shared/error_messages', object: f.object %>


  	  <%= f.label :recipe_title %>
  	  <%= f.text_field :recipe_title %>

  	  <%= f.label :discription %>
  	  <%= f.text_field :discription %>

  	  <%= f.label :ingredients %>
  	  <%= f.text_field :ingredients %>

  	  <%= f.label :prep_time %>
  	  <%= f.text_field :prep_time %>

  	  <%= f.label :cooking_time %>
  	  <%= f.text_field :cooking_time %>

  	  <%= f.submit "Create new recipe", class: "btn btn-large btn- primary" %>
  	<% end %>
  </div>
</div>
